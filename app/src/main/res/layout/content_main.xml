<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:clickable="true"
    android:focusable="true"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/scroll_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titre_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:text="Fampidirana mikasika ny fikambanana silamo"
                    android:textColor="#0077cc"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/description_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="-0.01"
                    android:layout_gravity="center_vertical|end"
                    android:lineSpacingExtra="9.1sp"
                    android:text="       Ianao ve efa namaky ireny fanehoan-kevitra samihafa momba ny vaovao sy ny fiovana ara-kolontsaina hataona fikambanana kristiana malaza amin'ny tambazotra sosialy ireny ? mampanontany tena izy ireny indraindray hoe tena manana zavatra iombonana tokoa ve ny mpianatr’i Kristy !\n "
                    android:textColor="#716f87"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/description_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="-0.01"
                    android:layout_gravity="center_vertical|end"
                    android:lineSpacingExtra="9.1sp"
                    android:text=" Tsy misy vakiana "
                    android:textColor="#716f87"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:visibility="gone"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/detail1"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnsavestyle"
                        android:text="Misimisy kokoa"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titre_book_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:text="Hetsika maneran-tany"
                    android:textColor="#53a93d"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="left"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.01"
                    android:text="Mivavaha…"
                    android:textColor="#0077cc"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/designation_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="9.1sp"
                    android:text="        Anjatony tapitrisa ireo kristiana maneran-tany miara miombom-bavaka aminao ho an’ny 30 andro ho avy izao mba hivavahana ho an’ny silamo. Mivavaha tahaka ny nataon’i Jesosy ao amin’ny Jaona 17:20-23, mba hiombona ny Tenan’i Kristy, mba hahafantaran’izao tontolo izao ny fitiavan’i Kristy\n"
                    android:textColor="#716f87"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/designation_second_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="9.1sp"
                    android:text=" Tsy misy vakiana "
                    android:textColor="#716f87"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/detail2"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btnsavestyle"
                        android:text="Misimisy kokoa"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>